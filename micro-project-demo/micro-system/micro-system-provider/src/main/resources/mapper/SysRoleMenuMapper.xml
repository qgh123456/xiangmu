<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atqgh.mapper.SysRoleMenuMapper">

	<!-- 结果集映射 -->
    <resultMap id="sysRoleMenuMap" type="com.atqgh.dto.SysRoleMenuDto" >
        <result property="roleCode" column="role_code"/>
        <result property="menuCode" column="menu_code"/>
    </resultMap>

    <!-- 结果集映射 -->
    <resultMap id="sysRoleMenuDetailMap" type="com.atqgh.dto.SysRoleMenuDto" >
        <result property="roleCode" column="role_code"/>
        <result property="menuCode" column="menu_code"/>
    </resultMap>

    <!-- 字段分片 -->
    <sql id="Base_Column_List">
        role_code,
        menu_code
    </sql>

    <!-- 字段分片 -->
    <sql id="Base_Column_Detail">
        role_code,
        menu_code
    </sql>

    <!-- 分页字段分片 -->
    <sql id="Base_Column_Page">
        role_code AS roleCode,
        menu_code AS menuCode
    </sql>

</mapper>