<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atqgh.mapper.SysMenuMapper">

	<!-- 结果集映射 -->
    <resultMap id="sysMenuMap" type="com.atqgh.system.dto.SysMenuDto" >
        <result property="id" column="id"/>
        <result property="menuCode" column="menu_code"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentCode" column="parent_code"/>
        <result property="orderNum" column="order_num"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="query" column="query"/>
        <result property="isFrame" column="is_frame"/>
        <result property="isCache" column="is_cache"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="perms" column="perms"/>
        <result property="icon" column="icon"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!-- 结果集映射 -->
    <resultMap id="sysMenuDetailMap" type="com.atqgh.system.dto.SysMenuDto" >
        <result property="id" column="id"/>
        <result property="menuCode" column="menu_code"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentCode" column="parent_code"/>
        <result property="orderNum" column="order_num"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="query" column="query"/>
        <result property="isFrame" column="is_frame"/>
        <result property="isCache" column="is_cache"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="status"/>
        <result property="perms" column="perms"/>
        <result property="icon" column="icon"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!-- 字段分片 -->
    <sql id="Base_Column_List">
        id,
        menu_code,
        menu_name,
        parent_code,
        order_num,
        path,
        component,
        query,
        is_frame,
        is_cache,
        menu_type,
        visible,
        status,
        perms,
        icon,
        create_by,
        create_time,
        update_by,
        update_time,
        remark
    </sql>

    <!-- 字段分片 -->
    <sql id="Base_Column_Detail">
        srm.id,
        srm.menu_code,
        srm.menu_name,
        srm.parent_code,
        srm.order_num,
        srm.path,
        srm.component,
        srm.query,
        srm.is_frame,
        srm.is_cache,
        srm.menu_type,
        srm.visible,
        srm.status,
        srm.perms,
        srm.icon,
        srm.create_by,
        srm.create_time,
        srm.update_by,
        srm.update_time,
        srm.remark
    </sql>

    <!-- 分页字段分片 -->
    <sql id="Base_Column_Page">
        id AS id,
        menu_code AS menuCode,
        menu_name AS menuName,
        parent_code AS parentCode,
        order_num AS orderNum,
        path AS path,
        component AS component,
        query AS query,
        is_frame AS isFrame,
        is_cache AS isCache,
        menu_type AS menuType,
        visible AS visible,
        status AS status,
        perms AS perms,
        icon AS icon,
        create_by AS createBy,
        create_time AS createTime,
        update_by AS updateBy,
        update_time AS updateTime,
        remark AS remark
    </sql>

    <select id="getPermissions" resultType="com.atqgh.system.dto.SysMenuDto">
        select <include refid="Base_Column_Detail"></include>
        from sys_role_menu srm
        inner join sys_menu sm on srm.menu_code = sm.menu_code
        where srm.role_code = #{roleCode}
    </select>

    <select id="getPermsByUserId" resultType="com.atqgh.dto.SysPermissDto">
        select
               sm.component ,
               sm.path,
               sm.perms
        from sys_user_role sur
         inner join sys_role_menu srm on sur.role_id = srm.role_id
         inner join sys_menu sm on srm.menu_id  = sm.menu_id
        where sur.user_id = #{userId}
    </select>

</mapper>