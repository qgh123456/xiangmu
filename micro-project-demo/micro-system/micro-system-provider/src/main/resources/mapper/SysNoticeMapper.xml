<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atqgh.mapper.SysNoticeMapper">

	<!-- 结果集映射 -->
    <resultMap id="sysNoticeMap" type="com.atqgh.dto.SysNoticeDto" >
        <result property="id" column="id"/>
        <result property="noticeTitle" column="notice_title"/>
        <result property="noticeType" column="notice_type"/>
        <result property="noticeContent" column="notice_content"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!-- 结果集映射 -->
    <resultMap id="sysNoticeDetailMap" type="com.atqgh.dto.SysNoticeDto" >
        <result property="id" column="id"/>
        <result property="noticeTitle" column="notice_title"/>
        <result property="noticeType" column="notice_type"/>
        <result property="noticeContent" column="notice_content"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!-- 字段分片 -->
    <sql id="Base_Column_List">
        id,
        notice_title,
        notice_type,
        notice_content,
        status,
        create_by,
        create_time,
        update_by,
        update_time,
        remark
    </sql>

    <!-- 字段分片 -->
    <sql id="Base_Column_Detail">
        id,
        notice_title,
        notice_type,
        notice_content,
        status,
        create_by,
        create_time,
        update_by,
        update_time,
        remark
    </sql>

    <!-- 分页字段分片 -->
    <sql id="Base_Column_Page">
        id AS id,
        notice_title AS noticeTitle,
        notice_type AS noticeType,
        notice_content AS noticeContent,
        status AS status,
        create_by AS createBy,
        create_time AS createTime,
        update_by AS updateBy,
        update_time AS updateTime,
        remark AS remark
    </sql>

</mapper>